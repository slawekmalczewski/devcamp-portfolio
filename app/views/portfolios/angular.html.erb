<h1>Angular Portfolio Items</h1>

<a href="portfolios/new">Create New Item</a>
<br/>

<%= link_to "Create New Item", new_portfolio_path if logged_in(:site_admin) %>

<br/>
<p>
  <%= new_portfolio_path %>
</p>
<br/>
<p>
  <%= new_portfolio_url %>
</p>
<% @angular_portfolio_items.each do |portfolio_item| %>
  <p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %></p>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfolio_path(portfolio_item.id) if logged_in(:site_admin) %>
  <%= link_to "Delete Portfolio Item", portfolio_path(portfolio_item.id), method: :delete, data: {confirm: 'Are you sure?'} if logged_in(:site_admin) %>
<% end %>
